{
  "transform": {
    "^.+\\.ts$": "ts-jest",
    "^.+\\.js$": "babel-jest",
    "^.+\\.svelte$": "svelte-jester"
  },
  "moduleNameMapper": {
    "^\\$lib(.*)$": "<rootDir>/src/lib$1",
    "^\\$app(.*)$": [
      ".svelte/dev/runtime/app/*",
      ".svelte/build/runtime/app/*"
    ]
  },
  "moduleFileExtensions": [
    "ts",
    "js",
    "svelte"
  ],
  "setupFilesAfterEnv": [
    "@testing-library/jest-dom/extend-expect"
  ]
}
